<?xml version="1.0" encoding="UTF-8"?>
 
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import com.canoo.cog.ui.city.*?>

<StackPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<HBox spacing="8.0">
			<VBox alignment="TOP_LEFT" spacing="2.0">
				<children>
					<fx:define>
						<ToggleGroup fx:id="styleGroup" />
					</fx:define>
					<Label text="city style:" />
					<RadioButton text="gotham" fx:id="cog"
						toggleGroup="$styleGroup" />
					<RadioButton text="code complexity" fx:id="cc"
						toggleGroup="$styleGroup" />
					<RadioButton text="test coverage" fx:id="tc"
						toggleGroup="$styleGroup" />
					<RadioButton text="technical debt" fx:id="td"
						toggleGroup="$styleGroup" />
					<RadioButton text="t.d. per line" fx:id="tdpl"
						toggleGroup="$styleGroup" />
				</children>
			</VBox>
			<padding>
				<Insets left="8.0" right="8.0" />
			</padding>
		</HBox>
	</children>
</StackPane>